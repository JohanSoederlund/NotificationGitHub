@page
@model IndexModel
@{
    ViewData["Title"] = "Login page";
}


<div class="row">
    <br />
    <div class="col-md-12">
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-action="Login" asp-controller="Account" class="btn btn-default">Log In with GitHub</a>
        }
        else
        {
            <p>Welcome</p>
        }
    </div>
</div>